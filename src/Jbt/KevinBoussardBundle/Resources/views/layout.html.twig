{% extends 'base.html.twig' %}

{% block body %}
        <div id="container" class="container-fluid">

            {% include 'JbtKevinBoussardBundle:Default:header.html.twig' %}

            <div id="content col-xs-12" class="row">

                <div class="content">
                    <div id="job_history">
                        Recent viewed jobs:
                        <ul>
                            {% for job in app.session.get('job_history') %}
                                <li>
                                    <a href="{{ path('jbt_job_show', { 'id': job.id, 'company': job.companyslug, 'location': job.locationslug, 'position': job.positionslug }) }}">{{ job.position }} - {{ job.company }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>


                    <div id="content">
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="flash_notice">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        {% for flashMessage in app.session.flashbag.get('error') %}
                            <div class="flash_error">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}

                        <div class="content">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>

            {% include 'JbtKevinBoussardBundle:Default:footer.html.twig' %}
        </div>
{% endblock %}
